<div class="wrap">

  <h1 class="text-center">Eat De Burger!</h1>

  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <img src="/assets/img/burger02.jpg">
    </div>
  </div>

  <div class="row">

    <ul class="col-md-4 m-auto">
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{name}}
        <button class="change-devour" data-id="{{id}}">
          Devour!
        </button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="col-md-4 m-auto">
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{name}}
        <button data-id="{{this.id}}" class="delete-burger">Try again!</button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <h2 class="text-center">Order a Burger</h2>

  <div class="row">
    <div class="col-md-8 text-center mx-auto">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

